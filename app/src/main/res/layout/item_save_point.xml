<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_cart"
        android:layout_marginBottom="@dimen/common_size_1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_save_point"
            android:layout_width="@dimen/width_preview_cart"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_layout"
            android:src="@drawable/food_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size" />

            <TextView
                android:id="@+id/tv_note_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_large_size" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_del_save_point"
            android:layout_width="@dimen/delete_button_size"
            android:layout_height="@dimen/delete_button_size"
            android:layout_marginRight="@dimen/margin_10dp"
            android:src="@drawable/delete" />
    </LinearLayout>
</android.support.v7.widget.CardView>
